                    signals:                    switch_signals;
                }
            } else {
            // Normal ballast version
                graphics {
                    gui:                        switch_metrowithcatenary_metro_gui;
                    track_overlay:              switch_track_overlay_param;
                    underlay:                   switch_underlay_param;
                    tunnels:                    switch_tunnels_param;
