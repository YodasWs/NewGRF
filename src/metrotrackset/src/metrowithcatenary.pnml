            if (openttd_version >= version_openttd(1, 1, 0, 19307)) {
                property {
                    construction_cost:          16;
                    map_colour:                 0x23;
                }
            }

            // OpenTTD 1.2 23758
            if (openttd_version >= version_openttd(1, 2, 0, 23758)) {
