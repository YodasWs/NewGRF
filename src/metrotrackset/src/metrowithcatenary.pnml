        param_railtype_activated = param_railtype_activated + 1;
        item(FEAT_RAILTYPES, item_metrowithcatenary) {
            // Replace mono/mglv or add railtype
            if (param_metrowithcatenary == 2) {
                property {
                    label:                          "MONO";
                }
